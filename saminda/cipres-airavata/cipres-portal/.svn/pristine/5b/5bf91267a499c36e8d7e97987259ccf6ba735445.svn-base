<%@ taglib prefix="s" uri="/struts-tags" %>

<div id="column">
  <h3>Enter Folder Details</h3>

  <table class="form">
  <s:form action="saveFolder" theme="simple">
    <tr><td><span class="warningPlain">* Required</span></td></tr>
    <tr>
      <td><span class="warningPlain">*</span>Label:<br />
        <s:textfield name="label" size="30"/>
      </td>
    </tr>
    <tr>
      <td>Description:<br />
        <s:textarea name="description" cols="50" rows="10"/>
      </td>
    </tr>
    <tr>
      <td>
        <s:submit value="Save"/>&nbsp;
        <s:submit value="Cancel" method="cancel"/>
      </td>
    </tr>
  </s:form>
  </table>
</div>
